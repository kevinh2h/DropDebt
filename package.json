{
  "name": "dropdebt",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for DropDebt Smart Bill Payment Schedule",
  "bin": {
    "dropdebt": "bin/dropdebt.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "deploy:database": "cdk deploy DropdebtStack/DatabaseStack",
    "deploy:compute": "cdk deploy DropdebtStack/ComputeStack",
    "destroy": "cdk destroy --all",
    "synth": "cdk synth",
    "bootstrap": "cdk bootstrap",
    "diff": "cdk diff",
    "lint": "tsc --noEmit",
    "clean": "rm -rf lib/**/*.js lib/**/*.d.ts src/**/*.js src/**/*.d.ts",
    "invoke:bill-prioritization": "aws lambda invoke --function-name dropdebt-bill-prioritization --payload fileb://test/fixtures/bill-prioritization-request.json response.json",
    "invoke:payment-splitting": "aws lambda invoke --function-name dropdebt-payment-splitting --payload fileb://test/fixtures/payment-splitting-request.json response.json"
  },
  "keywords": [
    "aws-cdk",
    "typescript",
    "infrastructure",
    "dropdebt",
    "bill-payment"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1020.2",
    "esbuild": "^0.25.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.859.0",
    "@aws-sdk/lib-dynamodb": "^3.859.0",
    "@types/aws-lambda": "^8.10.152",
    "aws-cdk-lib": "2.202.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.0.0"
  }
}
